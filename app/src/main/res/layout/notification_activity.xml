<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/basic_notification"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Basic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/collapsed_notification"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="collapsed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basic_notification" />

    <Button
        android:id="@+id/headsup_notification"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="headsup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collapsed_notification" />
</androidx.constraintlayout.widget.ConstraintLayout>