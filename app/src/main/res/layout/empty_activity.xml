<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.winjay.practice.ui.view.MyVerticalTextView
        android:id="@+id/aaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/biometricprompt_color_FF5555"
        android:textColor="@color/black_color"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.winjay.practice.ui.view.MyVerticalTextView
        android:id="@+id/vt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/biometricprompt_color_FF5555"
        android:textColor="@color/black_color"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/aaa"
        app:layout_constraintTop_toTopOf="parent" />

    <com.winjay.practice.ui.view.MyView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/biometricprompt_color_82C785"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.winjay.practice.ui.view.TwinkleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twinkle TextView"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_shadow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="#ff000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="Test Shadow"
        android:textColor="#ffffffff"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>