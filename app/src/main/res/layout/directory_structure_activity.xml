<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/all_files_access_permission_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请所有文件访问权限"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_share_doc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建文档文件"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_files_access_permission_btn" />

    <Button
        android:id="@+id/open_share_doc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开文档文件"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_share_doc_btn" />

    <Button
        android:id="@+id/open_share_doc_tree_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="授予对目录内容的访问权限"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_share_doc_btn" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除文件"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_share_doc_tree_btn" />

    <ImageView
        android:id="@+id/open_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/directory_structure_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_img" />
</androidx.constraintlayout.widget.ConstraintLayout>