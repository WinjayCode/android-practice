<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pid_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Pid:"
        android:textColor="@color/black_color"
        android:textSize="20dp"
        app:autoSizeMaxTextSize="20dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uid_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Uid:"
        android:textColor="@color/black_color"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/pid_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/memory_size_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="msize:"
        android:textColor="@color/black_color"
        android:textSize="20dp"
        app:autoSizeMaxTextSize="20dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pid_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/process_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black_color"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/memory_size_tv"
        app:layout_constraintTop_toBottomOf="@+id/uid_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>